# Neon PostgreSQL — pooled connection (used by the app at runtime)
DATABASE_URL=

# Neon PostgreSQL — direct/unpooled connection (used by drizzle-kit for migrations)
DATABASE_URL_UNPOOLED=

# Auth.js secret — generate with: openssl rand -base64 32
AUTH_SECRET=

# Auth.js — trust the Host header from the reverse proxy / request
# (required for non-Vercel deployments so Auth.js infers the correct origin)
AUTH_TRUST_HOST=true
